#!/usr/bin/env ruby
# frozen_string_literal: true

# When running from a development checkout (not installed as a gem),
# add the necessary load paths for teek, teek-sdl2, and teek-mgba.
if File.exist?(File.expand_path("../lib/teek/mgba.rb", __dir__))
  %w[lib teek-sdl2/lib teek-mgba/lib].each do |subdir|
    path = File.expand_path("../../#{subdir}", __dir__)
    $LOAD_PATH.unshift(path) unless $LOAD_PATH.include?(path)
  end
end

require_relative "../lib/teek/mgba/cli"

Teek::MGBA::CLI.run
